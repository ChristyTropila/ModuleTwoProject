<%total_points=0%>
<h2 class="title is-5">
<div class="welcome">Welcome <%=@current_child.name.capitalize%>, You Have: <%@current_child.recipes.each do |recipe|%>
   <%total_points=total_points + recipe.rewarded_points%>          
 <%end%>
   <%=total_points%> points! 
   </div>
   
<%=link_to "Create New Recipe!", new_recipes_path, :Method => :post %>
 </h2>
 <h2 class="title is-4"> Recipes </h2>


<div class="columns is-vcentered">
 <div class="column is-8">
 
 <div class="card recipe">
<div class="card-content">
 <%@current_child.recipes.map do |recipe|%>
<%=link_to recipe.title, recipe_path(recipe.id), class: 'button is-link'%> 
</div>
</div>



<%end%>



