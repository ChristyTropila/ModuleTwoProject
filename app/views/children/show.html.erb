<div class="middle-container">
  <%total_points=0%>
  <h2 class="title is-2">
    <div class="welcome-child">Welcome <%=@current_child.name.capitalize%>, You Have: <%@current_child.recipes.each do |recipe|%>
        <%total_points=total_points + recipe.rewarded_points%>
      <%end%>
      <%=total_points%> points! 
      <div class="link">
        <%=link_to "-->Create New Recipe!<--", new_recipes_path %>
      </div>
    </div>
  </div>
  <br>
  <br>
  <br>
  <br>
    <%if @current_child.recipes.empty?%>
        <div class="empty-book">
        </div>
      <%else%>
  <div class="container-child">
    <div class="row">
        <%@current_child.recipes.map do |recipe|%>
          <div class="col-4 my-3 mx-1">
            <div class="card " style="width: 18rem; height:35rem">
              <img class="card-img-top" src= <%=recipe.image.url%> alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title justify-content-center"><%=link_to recipe.title, recipe_path(recipe.id), class: 'button is-link'%></h5>
              </div>
            </div>
          </div>
        <%end%>
      <%end%>
    </div>
  </div>
