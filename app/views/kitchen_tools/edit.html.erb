
<div class="login-form">
<h3>Edit Your Tool Choice </h3>
<hr>

<% if @errors %>
    <% @errors.each do |error|%>
   <p style= "color: red"> <%=error%> </p>
    <%end%>
<%end%>
<%=form_for @current_tool do |f|%>
  <div class="form-group">
 <%= f.select :name, options_for_select(KitchenTool.all.map {|p| [ p.name ]}.uniq,   "Select Tools"),  :prompt => "Select Tool",:required => true %>
 </div>
    <button type="submit" class="btn btn-primary">Add Tool!</button>
<%end%>
</div>