<h3>Choose Your Tools! </h3>
<hr>

<% if @errors %>
    <% @errors.each do |error|%>
   <p style= "color: red"> <%=error%> </p>
    <%end%>
<%end%>

<%=form_for  @tool do |f|%>

 <%= f.select :name, options_for_select(KitchenTool.all.map {|p| [ p.name ]}.uniq,   "Select Tools"),  :required => true %>

<%=f.submit 'Add Tool!'%>
<%end%>
