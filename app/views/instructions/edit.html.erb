<div class="login-form">
  <h2>Update Instructions </h2>
  <% if @errors %>
    <% @errors.each do |error|%>
      <p style= "color: red"> <%=error%> </p>
    <%end%>
  <%end%>
  <%=form_for  @current_instruction do |f|%>
    <%=f.hidden_field :recipe_id, :value => session[:recipe_id]%>
    <%=f.hidden_field :kitchen_tool_id, :value => session[:kitchen_tool_id]%>
    <%=f.hidden_field :food_item_id, :value => session[:food_item_id]%>
    <div class="form-group">
      <%= f.select :content, options_for_select(Instruction.all.map {|p| [ p.content ]}.uniq,   "Select Instructions"),:prompt => "Select Instructions",:required => true %>
    </div>
    <button type="submit" class="btn btn-primary">Add Instructions!</button>
  <%end%>
</div>
