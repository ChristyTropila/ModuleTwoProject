<div class="container-recipe">
 <div class="card " style="width: 50rem; height:40rem">
  <div class="card-body">
<h2><%=@current_recipe.title%></h2>
<div class= "subtitle is-5">
<%@current_recipe.instructions.map do |current|%> 
<li>Ingredients: <%=@current_recipe.find_name_of_food(current.food_item_id)%></li>

<li>Tool: <%=@current_recipe.find_name_of_tool(current.kitchen_tool_id)%></li>
<li>Instructions: <%=current.content%></li>
<%end%>
<br>
<%= link_to "Edit This Recipe!", edit_recipe_path(:recipe_id => @current_recipe.id), :Method => :post%>
<%= link_to "Return To Dashboard", child_path %>
 <%= link_to 'Destroy', @current_recipe, method: :delete %>
</div>
</div>
</div>

