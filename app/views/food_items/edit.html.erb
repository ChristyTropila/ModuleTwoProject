<h2>Edit Food Choice</h2>


<% if @errors %>
    <% @errors.each do |error|%>
   <p style= "color: red"> <%=error%> </p>
    <%end%>
<%end%>

<%=form_for  @current_food do |f|%>
<%=f.label :name%>

<%= f.select :name, FoodItem.all.collect { |food| [food.name, food.name]}.uniq,  {:include_hidden => false}, multiple: true%>


<%=f.label :quantity%>
<%=f.text_field :quantity%>

<%=f.submit 'Add Food!'%>
<%end%>